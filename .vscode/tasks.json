{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "problemMatcher": {
        "base": "$tsc",
        "pattern": {
          "regexp": "^(Error: )?([^\\s].*)[\\(:](\\d+)[,:](\\d+)(?:\\):\\s+|\\s+-\\s+)(error|warning|info)\\s+TS(\\d+)\\s*:\\s*(.*)$",
          "file": 2,
          "line": 3,
          "column": 4,
          "severity": 5,
          "code": 6,
          "message": 7
        }
      },
      "runOptions": {
        "instanceLimit": 1
      },
      "label": "npm start",
      "detail": "ng serve",
      "group": "build",
      "isBackground": true
    }
  ]
}
